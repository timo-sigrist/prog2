<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="480.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ch.zhaw.prog2.application.MainWindowController">
    <children>
        <VBox alignment="CENTER" prefHeight="212.0" prefWidth="100.0" spacing="10.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="15.0">
            <children>
                <Label fx:id="labelTitle" text="WordCloud" />
                <TextField fx:id="textField" maxWidth="300.0" VBox.vgrow="ALWAYS" />
                <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
                    <children>
                        <Button fx:id="buttonAddText" mnemonicParsing="false" onAction="#addText" text="Hinzufügen Text" HBox.hgrow="ALWAYS" />
                        <Button fx:id="buttonDeleteField" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#deleteField" text="Löschen Eingabefeld" HBox.hgrow="ALWAYS" />
                    </children>
                    <VBox.margin>
                        <Insets />
                    </VBox.margin>
                </HBox>
                <TextArea fx:id="textArea" prefHeight="135.0" prefWidth="202.0" VBox.vgrow="ALWAYS" />
            </children>
        </VBox>
    </children>
</AnchorPane>

